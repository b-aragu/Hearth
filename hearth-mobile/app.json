{
  "expo": {
    "name": "Hearth",
    "slug": "hearth",
    "scheme": "hearth",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "developmentClient": false,
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "cover",
      "backgroundColor": "#FFEFE8"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.baragu.hearthmobile"
    },
    "android": {
      "package": "com.baragu.hearthmobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "@sentry/react-native/expo",
        {
          "organization": "baragu-tech",
          "project": "hearth-mobile"
        }
      ],
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "DayStreak",
              "label": "Hearth Streak",
              "minWidth": "110dp",
              "minHeight": "110dp",
              "description": "Keep track of your couple streak.",
              "previewImage": "./assets/widget-preview.png"
            },
            {
              "name": "PartnerStatus",
              "label": "Partner Status",
              "minWidth": "110dp",
              "minHeight": "110dp",
              "description": "See if your partner is online.",
              "previewImage": "./assets/widget-preview.png"
            }
          ]
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "kotlinVersion": "2.0.21",
            "extraGradleProps": {
              "android.enableMinifyInReleaseBuilds": "false",
              "android.enableR8.fullMode": "false",
              "expo.useLegacyPackaging": "true"
            }
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b4da5c0a-2807-4c5a-b4fc-5edbfd3f586a"
      }
    }
  }
}